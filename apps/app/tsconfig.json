{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["app/_types/*"],
      "@/types": ["app/_types"],
      "@/actions/*": ["app/_actions/*"],
      "@/actions": ["app/_actions"],
      "@/components/*": ["app/_components/*"],
      "@/components": ["app/_components"],
      "@/providers/*": ["app/_providers/*"],
      "@/providers": ["app/_providers"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}