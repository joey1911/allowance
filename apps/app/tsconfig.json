{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["types/*"],
      "@/types": ["types"],
      "@/actions/*": ["actions/*"],
      "@/actions": ["actions"],
      "@/components/*": ["components/*"],
      "@/components": ["components"],
      "@/providers/*": ["providers/*"],
      "@/providers": ["providers"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
